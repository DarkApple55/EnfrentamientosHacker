@{
    ViewData["Title"] = "Iniciar Enfrentamiento";
}
<body class="body-default">
    <div class="row" style="margin-top: 1rem; margin-bottom: 1rem;">
        <div class="col-3"></div>
        <div class="col-6">
            <!-- ------------------- CARRUSEL ------------------- -->
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                        aria-current="true" aria-label="Slide 1"></button>
                        @for (int i = 1; i < ViewBag.Rings.Count; i++)
                        {
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" aria-label="Slide @i+1"></button>
                        }
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/img/rings/@ViewBag.Rings[0]" class="d-block w-100" alt="..."
                            style="max-width: 100%; height: 18rem;">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="texto-carrusel">@ViewBag.RingsTexto[0]</h3>
                            @* <p>Some representative placeholder content for the first slide.</p> *@
                        </div>
                    </div>
                    @for (int i = 1; i < ViewBag.Rings.Count; i++)
                    {
                        <div class="carousel-item">
                            <img src="/img/rings/@ViewBag.Rings[i]" class="d-block w-100" alt="..."
                                style="max-width: 100%; height: 18rem;">
                            <div class="carousel-caption d-none d-md-block">
                                <h3 class="texto-carrusel">@ViewBag.RingsTexto[i]</h3>
                                @* <p>Some representative placeholder content for the second slide.</p> *@
                            </div>
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <!-- ------------------------------------------------- -->
        </div>
        <div class="col-3"></div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <!-- --------------------- DIV FORM ---------------------------- -->
            <div id="div-form">
                <form method="post" enctype="multipart/form-data" id="form-iniciar"> @* class="form_enfrentamientos" *@
                    <div class="input-group mb-3">
                        <select class="form-control form-select form-select-lg" style="font-size: 1.1rem;">
                            <option value="-1"><span class="option_default">Seleccione un luchador</span></option>
                            @foreach (Luchador l in ViewBag.ListaLuchadores)
                            {
                                <option value="@l.IdLuchador">@l.Nombre</option>
                                <img class="img_luchador1" src="/img/luchadores/9.png/">

                            }
                        </select>
                        <select class="form-control form-select form-select-lg" style="font-size: 1.1rem;">
                            <option value="-1"><span>Seleccione un luchador</span></option>
                            @foreach (Luchador l in ViewBag.ListaLuchadores)
                            {
                                <option value="@l.IdLuchador">@l.Nombre</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <!-- ------------------------------------------------- -->
        </div>
        <div class="col-1"></div>
    </div>
</body>
